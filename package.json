{
  "name": "poetry-syntax-highlight",
  "displayName": "Poetry Syntax Highlight",
  "description": "A simple syntax highlighter for Poetry projects",
  "publisher": "jarbasgouveia",
  "icon": "icon.png",
  "author": {
    "name": "Jarbas Gouveia",
    "email": "gouvik.dev@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jarbasgouveia/poetry-syntax-highlight"
  },
  "license": "MIT",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other", "Visualization"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
     "languages": [
    {
      "id": "poetry-toml",
      "aliases": ["Poetry TOML"],
      "filenames": ["pyproject.toml"],
      "configuration": "./language-configuration.json"
    }
  ],
  "grammars": [
    {
      "language": "poetry-toml",
      "scopeName": "source.poetry-toml",
      "path": "./syntaxes/poetry.tmLanguage.json"
    }
  ],

    "commands": [
      {
        "command": "poetry-syntax-highlight.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
